<link href="~/css/dashboard.css" rel="stylesheet" />
<body class="dashboard-body">
    <nav class="dashboard-nav">
        <div class="logo">TechCorp</div>
        <div class="nav-links">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-danger px-3 py-2 rounded-pill fw-semibold">Logout</button>
            </form>
        </div>
    </nav>

    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="user-info">
                <div class="user-avatar">JD</div>
                <div class="user-name">John Doe</div>
            </div>
            <nav class="sidebar-nav">
                <a href="#" class="active">Overview</a>

                <a asp-controller="Logic" asp-action="NewJob">Create New Jop</a>

                <a href="#">My Jops</a>
            </nav>
        </aside>

        <main class="dashboard-main">
            <header class="dashboard-header">
                <h1>Dashboard Overview</h1>
                <div class="date">March 14, 2025</div>
            </header>

            <div class="dashboard-grid">
                <div class="dashboard-card">
                    <h3>All Jops</h3>
                    <div class="card-value">12</div>
                </div>
                <div class="dashboard-card">
                    <h3>All Employee</h3>
                    <div class="card-value">24</div>
                </div>
            </div>
            <section class="recent-activity">
                <h2>Recent Activity</h2>
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon">📝</div>
                        <div class="activity-details">
                            <h4>Project Update</h4>
                            <p>New features added to Project Alpha</p>
                            <span class="activity-time">2 hours ago</span>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon">👥</div>
                        <div class="activity-details">
                            <h4>New Team Member</h4>
                            <p>Sarah Johnson joined the team</p>
                            <span class="activity-time">5 hours ago</span>
                        </div>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="dashboard.js"></script>
</body>