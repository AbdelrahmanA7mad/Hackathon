@model CreateJopViewModel
<style>
    body {
        background-color: #e3edfc;
        font-family: 'Segoe UI', sans-serif;
    }

    .form-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin: 2rem auto;
        max-width: 800px;
    }

    h2 {
        color: #0c192c;
        border-bottom: 2px solid #035ae9;
        padding-bottom: 15px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        color: #0c192c;
        font-weight: 500;
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 2px solid #e3edfc;
        border-radius: 5px;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #035ae9;
            outline: none;
            box-shadow: none;
        }

    .btn-primary {
        background-color: #035ae9;
        border: none;
        padding: 12px 30px;
        border-radius: 5px;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0c192c;
            color: white;
        }

    .validation-message {
        color: #dc3545;
        font-size: 0.875em;
        display: block;
        margin-top: 5px;
    }
</style>
<div class="form-container">
    <h2>Create New Job</h2>

    <form asp-action="NewJob" method="post">
        <div class="form-group">
            <label asp-for="JobTitle"></label>
            <input asp-for="JobTitle" class="form-control" />
            <span asp-validation-for="JobTitle" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="RequiredSkills"></label>
            <input asp-for="RequiredSkills" class="form-control"
                   placeholder="Enter comma-separated skills (e.g., C#, .NET, SQL)" />
            <span asp-validation-for="RequiredSkills" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumberOfQuestions"></label>
            <input asp-for="NumberOfQuestions" type="number" class="form-control"
                   min="1" max="50" step="1" />
            <span asp-validation-for="NumberOfQuestions" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="DifficultyLevel"></label>
            <select asp-for="DifficultyLevel" asp-items="Html.GetEnumSelectList<DifficultyLevel>()"
                    class="form-control"></select>
            <span asp-validation-for="DifficultyLevel" class="validation-message"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Job</button>
        <a asp-action="Index" class="cancel-link">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}